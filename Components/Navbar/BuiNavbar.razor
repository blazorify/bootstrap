@namespace Blazorify.Bootstrap
@inherits BuiContentComponentBase

<nav class="navbar navbar-expand-lg @ClassList">
	<BuiContainer Fluid="Fluid">
		@if (BuiNavbarBrand != null) {
			@BuiNavbarBrand(new BuiNavbarBrand())
		} else {
			<BuiNavbarBrand>
				@BrandName
			</BuiNavbarBrand>
		}

		<BuiNavbarToggler />

		@if(BuiNavbarCollapse != null) {
			@BuiNavbarCollapse(new BuiNavbarCollapse())
		} else {
			<BuiNavbarCollapse>
				@BuiNavbarNav
			</BuiNavbarCollapse>
		}
	</BuiContainer>
</nav>
